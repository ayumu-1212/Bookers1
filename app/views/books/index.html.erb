<div class="page">
	<h1>Books</h1>
	<table cellspacing="10">
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id), class: "lin" %></td>
				<td><%= link_to "Edit", edit_book_path(book.id), class: "lin" %></td>
				<td><%= link_to "Destroy", book_path(book.id), class: "lin", method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		<% end %>
	</table>

	<h2> New book</h2>
	<!-- form_for部分 -->
	<%= form_for(@book) do |f|%>

		<p>Title</p>
		<%= f.text_field :title %>
		<p>Body</p>
		<%= f.text_area :body %><br>
		<%= f.submit "Create Book" %>

	<% end %>
</div>